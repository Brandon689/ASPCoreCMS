@model ASPCoreCMS.Models.Article

@{
    ViewData["Title"] = "Article Details";
}

<h1>@Model.Title</h1>

<div>
    <h4>Article Details</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Author</dt>
        <dd class="col-sm-10">@Model.Author.UserName</dd>
        <dt class="col-sm-2">Created Date</dt>
        <dd class="col-sm-10">@Model.CreatedDate.ToLongDateString()</dd>
        <dt class="col-sm-2">Last Modified</dt>
        <dd class="col-sm-10">@Model.ModifiedDate.ToLongDateString()</dd>
    </dl>
</div>
<div>
    <h4>Content</h4>
    <hr />
    <div>@Html.Raw(Model.Body)</div>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">Edit</a>
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</div>
